-content_for(:back) do
  %p
    =link_to "Back to questions", root_path

%h1 Question

%h2
  =@question.text

%h2 Answer
%p
  %em
    =@question.answer

=yield :back

-unless @comments.empty?
  %ul
    -@comments.each do |comment|
      %li
        =comment.text

=form_for [@question, @comment] do |f|
  =render :partial => 'shared/errors', :locals => { :object => @comment }
  %p
    =f.label :text, "Comment"
    %br
    =f.text_area :text
  =f.submit

=yield :back